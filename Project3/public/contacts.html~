    <div class="container">
      <table class="table" id="contactsTable">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Location</th>
            <th scope="col">Contact Information</th>
            <th scope="col">Email</th>
            <th scope="col">Website_Name</th>
